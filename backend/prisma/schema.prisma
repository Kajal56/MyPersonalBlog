generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Movie {
  id             String   @id @default(cuid())
  title          String
  rating         Int
  favoriteAspect String
  dateWatched    DateTime
  tags           String[]
  dateAdded      DateTime @default(now())

  @@map("movies")
}

model Book {
  id          String   @id @default(cuid())
  title       String
  author      String
  rating      Int
  keyTakeaway String
  dateRead    DateTime
  tags        String[]
  dateAdded   DateTime @default(now())

  @@map("books")
}

model Trip {
  id          String   @id @default(cuid())
  title       String
  destination String
  startDate   DateTime
  endDate     DateTime
  highlight   String
  tags        String[]
  dateAdded   DateTime @default(now())

  @@map("trips")
}

model Restaurant {
  id           String   @id @default(cuid())
  name         String
  location     String
  cuisine      String
  rating       Int
  favoriteDish String
  dateVisited  DateTime
  tags         String[]
  dateAdded    DateTime @default(now())

  @@map("restaurants")
}

model Flat {
  id             String   @id @default(cuid())
  name           String
  contactNumber  String
  societyName    String
  googleMapsLink String?
  rentValue      Int
  remarks        String?
  dateAdded      DateTime @default(now())

  @@map("flats")
}

model FeedPost {
  id        String   @id @default(cuid())
  title     String?
  content   String
  mediaType String?
  tags      String[]
  dateAdded DateTime @default(now())
  mediaData String?

  @@map("feed_posts")
}

model BookSuggestion {
  id            String   @id @default(cuid())
  name          String?
  itemName      String?
  message       String
  moment        String?
  dateSuggested DateTime @default(now())
  isRead        Boolean  @default(false)

  @@map("book_suggestions")
}

model MovieSuggestion {
  id            String   @id @default(cuid())
  name          String?
  itemName      String?
  message       String
  moment        String?
  dateSuggested DateTime @default(now())
  isRead        Boolean  @default(false)

  @@map("movie_suggestions")
}


model ContactMessage {
  id        String   @id @default(cuid())
  name      String?
  email     String?
  message   String
  dateSent  DateTime @default(now())

  @@map("contact_messages")
}

model RestaurantSuggestion {
  id            String   @id @default(cuid())
  name          String?
  itemName      String?
  message       String
  moment        String?
  dateSuggested DateTime @default(now())
  isRead        Boolean  @default(false)

  @@map("restaurant_suggestions")
}
